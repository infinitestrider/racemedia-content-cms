---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(b, a) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<!doctype html>
<!---title: Password Protected Page--->

<div class="box-ting">
<div class="container">
	<h2>Password Protected Page</h2>
	<form id="passwordForm">
	  <input type="password" id="passwordInput" placeholder="Enter password">
	  <button type="submit">Submit</button>
	</form>
	<div id="errorMessage" class="error-message"></div>
  </div>
</div>
  
  <style>
	body {
	  font-family: Arial, sans-serif;
	  position: absolute;
	}
  
	.container {
	  margin: 100px auto;
	  width: 400px;
	  margin-left: 35%;
	  margin-right: 35%;
	  padding: 20px;
	  background-color: #ffffff2c;
	  border-radius: 8px;
	  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
	  position: absolute;

	}

	.box-ting {
		width: 100%;
		height: 100%;
		background-color: #383838;
		position: absolute;
		display: ;

		
	}
  
	h2 {
	  text-align: center;
	  color: #333;
	}
  
	input[type="password"] {
	  width: calc(100% - 20px);
	  padding: 10px;
	  margin-bottom: 10px;
	  border: 1px solid #ccc;
	  border-radius: 4px;
	}
  
	button {
	  width: 100%;
	  padding: 10px;
	  background-color: #007bff;
	  color: #fff;
	  border: none;
	  border-radius: 4px;
	  cursor: pointer;
	}
  
	.error-message {
	  margin-top: 10px;
	  padding: 10px;
	  background-color: #ffcccc;
	  color: #cc0000;
	  border-radius: 4px;
	}
	@media (max-width: 720px) {
				.container {
					width: 70%;
					margin-left: 8%;
					margin-right: 8%;
				}
			}
  </style>
  
  <script>
	const passwordForm = document.getElementById('passwordForm');
	const passwordInput = document.getElementById('passwordInput');
	const errorMessage = document.getElementById('errorMessage');
  
	const correctPassword = 'racemediaWorld';
  
	passwordForm.addEventListener('submit', function(event) {
	  event.preventDefault();
	  const enteredPassword = passwordInput.value.trim();
	  if (enteredPassword === correctPassword) {
		// Redirect to the protected page
		window.location.href = 'protected-page.html';
	  } else {
		errorMessage.textContent = 'Incorrect password. Only for Admin.';
		passwordInput.value = '';
	  }
	});
  </script>
  <!------Password Protect Section End -->
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 60%;
				background-color: ;
				margin-bottom: 128px;
				box-shadow: none;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li *:hover {
				color: grey;
			}
			ul li:first-child {
				width: %;
				margin-bottom: 1rem;
				text-align: left;
				color: white;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 10px;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 4px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
				color: rgb(255, 255, 255);
			}
			.date {
				margin: 0;
				color: rgba(255, 255, 255, 0.788);
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: white;
			}
			ul a:hover img {
				box-shadow: ;
			}
			@media (max-width: 720px) {
				main {
					margin-top: 160px;
					margin-bottom: 200px;
					width: 99%;
				}
				ul {
					gap: 0.5em;
				}
				 li {
					width: 100%;
					text-align: center;
				}
				 li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 10px;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.slug}/`}>
									<img width={720} height={360} src={post.data.heroImage} alt="" />
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
